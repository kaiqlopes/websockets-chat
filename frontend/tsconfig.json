{
  "compilerOptions": {
    "target": "es2016",                               
    "module": "esnext",                               
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,            
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",                                      
    "skipLibCheck": true,     
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
